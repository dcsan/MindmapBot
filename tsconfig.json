{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleDetection": "auto",
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": "./lib",
        "outDir": "./src",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitOverride": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "src"]
}